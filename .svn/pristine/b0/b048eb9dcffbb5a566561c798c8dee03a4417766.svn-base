.w20 {
	width: 20%;
	display: inline-block;
}

.w80 {
	width: 80%;
	display: inline-block;
}

.w100 {
	width: 100%;
	display: inline-block;
}

.leaguesPage {
	/*background-color: #f0eff5;*/
}

.leaguesPage .leaguetabs {
	position: fixed;
	width: 100%;
	top: 0px;
	height: 36px;
	line-height: 36px;
	font-size: 1.2em;
	overflow: hidden;
	padding-bottom: 2px;
	background-color: #ffffff;
	z-index: 1;
	border-bottom: 1px solid #E6E6E6;
}

.leaguesPage .leaguetabs .tab {
	display: block;
	float: left;
	width: 20%;
	margin-left: 10%;
	text-align: center;
}

.leaguesPage .pane {
	margin-top: 38px;
}

.leaguesPage .leagueslive .item {
	color: #555555;
	height: 5.75em;
	overflow: hidden;
	border-bottom: 1px solid #E6E6E6;
	background-color: #f7f7f7;
	padding: 0 10px;
}

.leaguesPage .leagueslive .odditem {
	background-color: #EDEDED;
}

.leaguesPage .leagueslive .item .leag {
	width: 18%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.leaguesPage .leagueslive .item .leag .leaguename {
	color: #4C4C4C;
}

.leaguesPage .leagueslive .item .home {
	width: 34%;
	height: 100%;
	text-align: right;
	display: flex;
	align-items: center;
	justify-content: center;
}

.leaguesPage .leagueslive .item .middle {
	width: 14%;
	height: 100%;
	float: left;
	display: flex;
	align-items: center;
	justify-content: center;
}

.leaguesPage .leagueslive .item .vertical {
	width: 100%;
	color: #808080;
}

.leaguesPage .leagueslive .item .away {
	width: 34%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.leaguesPage .leagueslive .item .span1 {
	display: block;
	line-height: 2em;
	text-align: left;
}

.leaguesPage .datespan {
	color: #818181;
}

.leaguesPage .leagueslive .item .span2 {
	color: #000000;
	font-size: 1.2em;
	font-weight: 500;
}

.leaguesPage .leagueslive .item .span3 {
	font-size: 1.4em;
	font-weight: 500;
	display: block;
	color: #30a00e;
	text-align: center;
}

.leaguesPage .leagueslive .item .span4 {
	text-align: center !important;
	font-size: 1.4em;
	font-weight: 500;
	line-height: 1.5em !important;
}

.leaguesPage .leagueslive .item .status {
	display: block;
	font-size: 10px;
	height: 10px;
	text-align: center;
	transform: scale(0.8);
	-webkit-transform: scale(0.8);
	-moz-transform: scale(0.8);
	-ms-transform: scale(0.8);
}

.leaguesPage .leagueslive .item .span5 {
	color: #D80100;
	text-align: center !important;
	font-size: 1.4em;
	font-weight: 500;
	line-height: 1.5em !important;
}

.leaguesPage .leagueslive .item .span6 {
	font-size: 1.4em;
	display: block;
	width: 100%;
	text-align: center;
}

.leaguesPage .leagueslive .item .redcard {
	color: #FFFFFF;
	background-color: #da0000;
	display: inline-block;
	margin: 0 0.3em;
	width: .7em;
	line-height: 1em;
	text-align: center;
	border-radius: 0.2em;
	font-size: 12px;
	-webkit-transform: scale(0.7, 0.7);
}

.leaguesPage .empty_data {
	text-align: center;
	margin: auto;
}