.leftpane {
    width: 30%;
    /*border-right: 1px solid #ccc;*/
    height: 100%;
    overflow-y: scroll;
    display: inline-block;
    vertical-align: top;
}

.sideline {
    width: calc(100% - 1px);
    height: 100%;
    border-right: 1px solid #ccc;
}



.leftpane .time, .leftpane .league {
    text-align: center;
    overflow-y: scroll;
    height: 100%;
}

    .leftpane .time a, .leftpane .league a {
        height: 5em;
        border-bottom: solid 1px #ccc;
        background-color: #f3f3f3;
        position: relative;
        border-right: 1px solid #ccc;
    }

        .leftpane .time .select, .leftpane .league a.select {
            color: #ff5b06;
            background-color: #fff;
            border-right: none;
        }
