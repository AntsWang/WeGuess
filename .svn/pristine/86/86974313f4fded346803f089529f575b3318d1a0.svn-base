.match {
    margin-top: 109px;
    overflow: scroll;
}

    .match .oddtitle span {
        font-size: 12px;
    }

        .match .oddtitle span:first-child {
            color: #444;
            font-weight: bold;
        }

    .match .odditem {
        border-bottom: solid 1px #CCCCCC;
        font-size: 14px;
    }



@media only screen and (min-width: 100px) and (max-width: 320px) {
    .match .odditem {
        font-size: 12px;
    }
}

.match .odditem a:last-child span {
    border-right-width: 0px;
}

.match .fourBall {
    display: block;
    max-width: 60%;
    text-indent: 0.5em;
    /*float: left;*/
}

.notice {
    height: 2.8em;
    line-height: 2.8em;
    font-size: 1.2em;
}
